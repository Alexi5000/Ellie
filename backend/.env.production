# Production Environment Configuration for Ellie Voice Receptionist Backend

# Application Environment
NODE_ENV=production
PORT=5000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# API Keys (Replace with actual production keys)
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VOICE_MAX_REQUESTS=20

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_jwt_secret_here

# External Service Configuration
OPENAI_MODEL=gpt-4
GROQ_MODEL=llama2-70b-4096
TTS_VOICE=alloy
TTS_SPEED=1.0

# Audio Processing Configuration
MAX_AUDIO_FILE_SIZE=10485760
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,webm

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9464

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/ellie_prod

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# CDN Configuration
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.your-domain.com
CDN_REGIONS=us-east-1,eu-west-1,ap-southeast-1
ASSET_VERSION=1.0.0
ASSET_COMPRESSION=true
ASSET_MINIFICATION=true
IMAGE_OPTIMIZATION=true
ASSET_CACHING=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ellie_prod
DB_USER=postgres
DB_PASSWORD=your_secure_db_password
DB_SSL=true
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=300000

# Email Configuration (if needed for notifications)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password