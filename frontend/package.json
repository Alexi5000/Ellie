{
  "name": "ellie-voice-receptionist-frontend",
  "version": "1.0.0",
  "description": "Frontend React app for Ellie Voice Receptionist AI Assistant",
  "private": true,
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "framer-motion": "^12.23.24",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^6.20.1",
    "react-syntax-highlighter": "^15.6.6",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "axe-core": "^4.11.0",
    "eslint": "^8.54.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.56.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:browser": "playwright test",
    "test:browser:chromium": "playwright test --project=chromium",
    "test:browser:firefox": "playwright test --project=firefox",
    "test:browser:webkit": "playwright test --project=webkit",
    "test:browser:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:browser:headed": "playwright test --headed",
    "test:browser:debug": "playwright test --debug",
    "test:browser:report": "playwright show-report",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 500",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "lighthouse": "node lighthouse-audit.js",
    "lighthouse:desktop": "lighthouse http://localhost:4173 --preset=desktop --view",
    "lighthouse:mobile": "lighthouse http://localhost:4173 --view",
    "audit": "npm run build && npm run preview & sleep 5 && npm run lighthouse"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
